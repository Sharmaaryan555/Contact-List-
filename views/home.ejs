<html>

<head>
    <title>
        <%=locals.title%>
    </title>
    <script src="https://kit.fontawesome.com/9f29590cc8.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        My Contact List
    </h1>
    <div>
        <ul>
            <% for(let i of contact_List){%>

                <li>
                    <p>
                        <%= i.name %>
                    </p>
                    <p>
                        <%= i.phone %>
                    </p>
                    <div class="delete-container">
                        <a href="/delete-contact/?phone=<%= i.phone %>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                </li>

                <%} %>
        </ul>
    </div>
    <br>
    <br>

    <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Phone" required>

        <button type="submit" id="submit">Add Contact</button>
    </form>

    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>